<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a74b4b">

            <ImageView
                android:id="@+id/about_us_icon"
                android:layout_width="@dimen/item_image_size"
                android:layout_height="@dimen/item_image_size"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/about_us_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/about_us_icon"
                android:textColor="@android:color/white"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/about_us_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="version 1.0.0"
                android:layout_below="@id/about_us_app_name"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/about_us_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_us_version_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/about_us_developers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed By Win Than Htike"
                android:layout_below="@id/about_us_event"
                android:layout_margin="16dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/about_us_thanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data From Bro Boo"
                android:layout_below="@id/about_us_developers"
                android:layout_margin="16dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/about_us_email"
                android:layout_width="wrap_content"
                android:layout_below="@+id/about_us_thanks"
                android:layout_height="wrap_content"
                android:text="mmdev147@gmail.com"
                android:layout_margin="12dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_contact_me"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:textAllCaps="false"
                android:text="Contact Developer"
                android:layout_below="@id/about_us_email"
                android:layout_margin="16dp"
                android:layout_centerHorizontal="true"
                android:textColor="#ff0000"
                android:textSize="18sp"/>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>