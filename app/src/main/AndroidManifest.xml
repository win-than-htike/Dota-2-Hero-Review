<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.winthanhtike.travelandtour">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Dota2HeroApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.StrengthHeroDetailActivity" />
        <activity android:name=".activity.AgilityHeroDetailActivity" />
        <activity android:name=".activity.IntelligenceHeroDetailActivity" />
        <activity
            android:name=".activity.BasicItemDetailActivity"
            android:label="@string/title_activity_basic_item_detail"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".activity.UpgradeItemDetailActivity"
            android:label="@string/title_activity_upgrade_item_detail"
            android:theme="@style/MyMaterialTheme"></activity>
    </application>

</manifest>